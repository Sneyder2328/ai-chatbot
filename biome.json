{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
      "includes": [
        "**",
        "!!**/dist",
        "!!**/node_modules",
        "!!**/src/generated"
      ]
    },
    "linter": { "enabled": true },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    },
    "javascript": {
      "parser": {
        "unsafeParameterDecoratorsEnabled": true
      }
    },
    "assist": {
      "actions": {
        "source": {
          "organizeImports": "on"
        }
      }
    }
  }