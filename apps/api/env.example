PORT=3000

# React client origin for CORS + Better Auth trusted origins
CLIENT_URL=http://localhost:5173

# Better Auth server base URL (no path)
BETTER_AUTH_URL=http://localhost:3000

# Generate a secret (example): openssl rand -base64 32
BETTER_AUTH_SECRET=change-me

# Database connection used by Prisma adapter
DATABASE_URL=postgresql://ai_chatbot_user:ai_chatbot_password@localhost:5434/ai_chatbot

# Optional (enables Google OAuth provider)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

