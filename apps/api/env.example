NODE_ENV=development
PORT=3000

# Comma-separated list of allowed browser origins for CORS + Better Auth trusted origins (no paths)
# Examples:
# - http://localhost:5173
# - https://app.example.com,https://admin.example.com
CLIENT_URL=http://localhost:5173

# Better Auth server base URL (no path)
BETTER_AUTH_URL=http://localhost:3000

# Generate a secret (example): openssl rand -base64 32
BETTER_AUTH_SECRET=change-me

# Database connection used by Prisma adapter
DATABASE_URL=postgresql://ai_chatbot_user:ai_chatbot_password@localhost:5434/ai_chatbot

# Set true if behind a reverse proxy (Fly/Render/NGINX). Otherwise leave false.
TRUST_PROXY=false

# Optional (enables Google OAuth provider)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OpenRouter (Vercel AI SDK)
OPENROUTER_API_KEY=change-me
# Optional (default: https://openrouter.ai/api/v1)
OPENROUTER_BASE_URL=
# Optional attribution headers for OpenRouter leaderboards
OPENROUTER_APP_NAME=
OPENROUTER_APP_URL=

