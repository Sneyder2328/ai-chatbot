generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
  importFileExtension = "js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid(7))
  email         String   @unique
  name          String?
  image         String?
  emailVerified Boolean  @default(false) @map("email_verified")
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz

  sessions      Session[]
  accounts      Account[]
  chats         Chat[]

  @@map("users")
}

model Session {
  id        String   @id @default(uuid(7))
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at") @db.Timestamptz
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model Account {
  id                    String    @id @default(uuid(7))
  userId                String    @map("user_id")
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?   @map("id_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at") @db.Timestamptz
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at") @db.Timestamptz
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt             DateTime  @updatedAt @map("updated_at") @db.Timestamptz

  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("accounts")
}

model Chat {
  id            String    @id @default(uuid(7)) @db.Uuid
  userId        String    @map("user_id")
  forkedFromChatId    String?   @map("forked_from_chat_id") @db.Uuid
  forkedFromMessageId String?   @map("forked_from_message_id") @db.Uuid
  title         String
  pinnedAt      DateTime? @map("pinned_at") @db.Timestamptz
  deletedAt     DateTime? @map("deleted_at") @db.Timestamptz
  lastMessageAt DateTime? @map("last_message_at") @db.Timestamptz
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamptz

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages      Message[]

  @@index([userId])
  @@index([userId, forkedFromChatId])
  @@index([userId, pinnedAt])
  @@index([userId, lastMessageAt])
  @@index([userId, deletedAt])
  @@map("chats")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
  TOOL
}

enum MessageStatus {
  QUEUED
  STREAMING
  COMPLETED
  FAILED
}

model Message {
  id        String      @id @default(uuid(7)) @db.Uuid
  chatId    String      @map("chat_id") @db.Uuid
  role      MessageRole
  content   String
  providerId String?     @map("provider_id")
  modelId    String?     @map("model_id")
  status     MessageStatus?
  errorMessage String?   @map("error_message")
  createdAt DateTime    @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime    @updatedAt @map("updated_at") @db.Timestamptz

  chat      Chat        @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@map("messages")
}

model Verification {
  id         String   @id @default(uuid(7))
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at") @db.Timestamptz
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@unique([identifier, value])
  @@index([expiresAt])
  @@map("verifications")
}